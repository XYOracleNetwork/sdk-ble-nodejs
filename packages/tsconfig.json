{
  "files": [],
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "esnext",
      "dom"
    ],
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outDir": "dist"
  },
  "references": [
    {
      "path": "ble-central"
    },
    {
      "path": "ble-central.noble"
    },
    {
      "path": "network.ble"
    },
    {
      "path": "ble-peripheral"
    }
  ],
  "include": [
    "ble-central/src/**/*.ts",
    "ble-central.noble/src/**/*.ts",
    "network.ble/src/**/*.ts",
    "ble-peripheral/src/**/*.ts"
  ]
}
